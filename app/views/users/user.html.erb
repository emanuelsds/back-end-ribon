<div>
    <div>
        <%= form_with url: "/add_user", method: :post do |form| %>
          <%= form.text_field :user %>
          <%= form.submit "+" %>
        <% end %>
        <%= form_with url: "/game?hp=6", method: :get do |form| %>
          <%= form.collection_select :user, @users, :id, :name %>
          <%= form.submit "Entrar" %>
        <% end %>
    </div>
</div>